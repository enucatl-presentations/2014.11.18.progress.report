        %section
          %h2 Phase and absorption
          %p Energy between 60 and 500 keV
          %div.spaced
            \\[\begin{aligned}
            \\log (\text{absorption}) \, &amp;= -z\frac{\sigma_\text{KN}}{2} \rho_e \\
            \\ \text{phase} \, &amp;= -z\lambda r_e \rho_e 
            \\end{aligned} \]
          %div.spaced
            We et al. <i>X-ray phase attenuation duality and phase retrieval</i>, Opt. Lett. 30/2005

        %section
          %h2 Dependent signals
          %p &plus; easier phase retrieval and fusion algorithms
          %p &minus; less complementarity, no effective Z information

        %section
          %h2 Noise properties of the phase
          %div.spaced
            \\[\begin{align*}
            \\sigma_\phi &amp;= \frac{1}{v\sqrt{N}}\\
            &amp;= \frac{1}{v_0 \sqrt{N_0}} \frac{1}{A^{r + 1/2}}
            \\end{align*} \]
          %div.spaced
            \\[\begin{align*}
            A &amp;= \text{absorption}\\
            B &amp;= \text{dark field}\\
            r &amp;= \frac{\log B}{\log A}\\
            N &amp;= \text{number of photons}\\
            _0 &amp;= \text{without sample}
            \\end{align*} \]

        %section
          %h2 \( \sigma_\phi(A, r) \)
          %div
            \\(\sigma_\phi = \frac{1}{v_0 \sqrt{N_0}} \frac{1}{A^{r + 1/2}} \qquad N_0 = 10^4 \text{ and }v_0 = 10\%\)
