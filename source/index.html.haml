  %h2 Noise properties of the phase
  %div.spaced
    \\[\begin{align*}
    \\sigma_\phi &amp;= \frac{1}{v\sqrt{N}}\\
    &amp;= \frac{1}{v_0 \sqrt{N_0}} \frac{1}{A^{r + 1/2}}
    \\end{align*} \]
  %div.spaced
    \\[\begin{align*}
    A &amp;= \text{absorption}\\
    B &amp;= \text{dark field}\\
    r &amp;= \frac{\log B}{\log A}\\
    N &amp;= \text{number of photons}\\
    _0 &amp;= \text{without sample}
    \\end{align*} \]

